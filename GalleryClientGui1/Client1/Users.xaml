<Window x:Class="Client.Users"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Client"
        mc:Ignorable="d"
        Loaded="Window_Loaded"
        WindowStartupLocation="CenterScreen"
        Title="Gallery" Height="480" Width="800">

    <StackPanel Margin="20" Background="#000000">
        <Label Content="Gallery" Foreground="#003c8f" FontSize="25" HorizontalAlignment="Center"/>
        <Separator />
        <Label Name="pageType" Content="Users" Foreground="#003c8f" FontSize="25" Margin="15,0,0,0" HorizontalAlignment="Left"/>

        <Frame Name="page" Source="UsersPage.xaml" Height="220" />

        <Button x:Name="addBtn" Click="addBtn_Click" Style="{StaticResource RoundCorner}"  Content="Add" Background="#545d62" Margin="50 10"  FontSize="18" Foreground="white"/>
        <Button Click="refreshBtn_Click" Style="{StaticResource RoundCorner}"  Content="Refresh data" Background="#545d62" Margin="50 5"  FontSize="18" Foreground="white"/>



    </StackPanel>
</Window>
